{
  "buildCommand": "pnpm install --frozen-lockfile && pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "projects": [
    {
      "name": "storefront",
      "root": "apps/storefront",
      "framework": "nextjs",
      "buildCommand": "cd apps/storefront && pnpm build",
      "installCommand": "pnpm install --frozen-lockfile",
      "outputDirectory": "apps/storefront/.next",
      "devCommand": "cd apps/storefront && pnpm dev",
      "env": {
        "NEXT_PUBLIC_SUPABASE_URL": "@supabase-url",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase-anon-key"
      }
    },
    {
      "name": "admin-dashboard",
      "root": "apps/admin-dashboard",
      "framework": "nextjs",
      "buildCommand": "cd apps/admin-dashboard && pnpm build",
      "installCommand": "pnpm install --frozen-lockfile",
      "outputDirectory": "apps/admin-dashboard/.next",
      "devCommand": "cd apps/admin-dashboard && pnpm dev",
      "env": {
        "NEXT_PUBLIC_SUPABASE_URL": "@supabase-url",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase-anon-key"
      }
    }
  ]
}
